<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_insurance_info"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_car_make_insurance_info_changable2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/b_add_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/addcar"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/text_car_make_insurance_info_changable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="5sp"
        android:paddingTop="8sp"
        android:paddingBottom="@dimen/log_sign_page"
        android:text="@string/disclaimer_privacy" />

    <ListView
        android:id="@+id/list_of_cars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"/>


</LinearLayout>